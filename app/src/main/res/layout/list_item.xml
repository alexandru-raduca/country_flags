<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="country"
            type="com.daniel.raduca.countryflags.model.Country" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/flag"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:background="@drawable/round_right_background"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/title_size"
                    tools:text="Italy" />

                <TextView
                    android:id="@+id/official_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/medium_text_size"
                    tools:text="Italian Republic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_text_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="4dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size"
                        app:drawableStartCompat="@drawable/ic_location_on"
                        tools:text="Europe" />

                    <TextView
                        android:id="@+id/subregion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="4dp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size"
                        tools:text="Southern Europe" />

                </LinearLayout>

                <TextView
                    android:id="@+id/capital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    app:drawableStartCompat="@drawable/ic_circle_location"
                    tools:text="Rome" />

                <TextView
                    android:id="@+id/population"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingVertical="4dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="0dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/medium_text_size"
                    app:drawableStartCompat="@drawable/ic_people"
                    tools:text="59.554.023" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
